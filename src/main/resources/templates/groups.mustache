<html>
<head>
    <title>Students registration</title>
</head>
<body>
<div>
    <form method="post">
        <input type="text", name="name", placeholder="Введите имя группы">
        <input type="text", name="teacher", placeholder="Введите id учителя">
        <button type="submit">Добавить</button>
    </form>
</div>

<div>
    <div>Список учителей</div>
    {{#teachers}}
        <div>
            <b>{{id}}</b>
            <span>{{name}}</span>
        </div>
    {{/teachers}}
</div>

<div>
    <div>Список групп</div>
    {{#groups}}
        <div>
            <b>{{id}}</b>
            <span>{{name}}</span>
        </div>
    {{/groups}}
</div>

</body>
</html>